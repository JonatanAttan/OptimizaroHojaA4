@using (Html.BeginForm("InsertarImagen", "InsertarImagen", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <p> </p>
   
    <div class="row">
        <div class="col-md-offset-3 col-lg-6">
            <div class="form-group">
                <label for="hoja">Selecciona un tipo de hoja: </label>
                <select name="hoja" , id="hoja">
                    <option value="796,1123">A4 796 X 1123</option>
                </select>
            </div>

            <div class="form-group">
                @Html.LabelFor(d => d.Imagen)
                @Html.TextBoxFor(d => d.Imagen, new { @class = "form-control", Type = "file" })
                @Html.ValidationMessageFor(d => d.Imagen, "", new { @class = "text-danger" })
            </div>
            <p></p>
            <p></p>
            <div class="form-group" style="text-align:right">
                <input type="submit" class="btn btn-danger" value="Optimizar Imagen" />
            </div>
        </div>
    </div>
}